<a href="{{ routes.root_url }}" class="bq-breadcrumb">
  <i class="fa-solid fa-chevron-left"></i> {{ "store.home" | user_t | default: "Home" }}
</a>
<div class="product-page__layout">
  {% if canonical_url contains "/1?" or canonical_url contains "/1#" %}
    {% include "product-page-preview" %}
  {% else %}
    {% include "product-page" %}
  {% endif %}
</div>

{% schema %}
{
  "name": "Details",
  "tag": "section",
  "class": "product-page",
  "templates": ["product"],
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "select",
      "id": "description_placement",
      "label": "Product description placement",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "bottom"
    },
    {
      "type": "header",
      "content": "Translations"
    },
    {
      "type": "text",
      "id": "description_label",
      "label": "Description label",
      "default": "Description"
    }
  ],
  "important": true,
  "unique": true
}
{% endschema %}
